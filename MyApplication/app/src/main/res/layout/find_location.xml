<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <Button
    android:id="@+id/button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="48dp"
    android:onClick="button_clicked"
    android:text="세명의 약속장소는 ?"
    app:layout_constraintEnd_toStartOf="@+id/resultText"
    app:layout_constraintStart_toStartOf="@+id/resultText"
    app:layout_constraintTop_toBottomOf="@+id/third_station"
    />
  <EditText
    android:id="@+id/first_station"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="56dp"
    android:layout_marginStart="10dp"
    android:ems="10"
    android:hint="(역은 입력하지마세요)"
    android:inputType="text"
    app:layout_constraintBottom_toTopOf="@+id/second_station"
    app:layout_constraintStart_toEndOf="@+id/textView1"
    />
  <EditText
    android:id="@+id/third_station"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="243dp"
    android:layout_marginStart="10dp"
    android:ems="10"
    android:hint="(역은 입력하지마세요)"
    android:inputType="text"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/textView3"
    />
  <EditText
    android:id="@+id/second_station"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="49dp"
    android:layout_marginStart="8dp"
    android:ems="10"
    android:hint="(역은 입력하지마세요)"
    android:inputType="text"
    app:layout_constraintBottom_toTopOf="@+id/third_station"
    app:layout_constraintStart_toEndOf="@+id/textView2"
    />
  <TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:text="첫번째 사람"
    app:layout_constraintBaseline_toBaselineOf="@+id/first_station"
    app:layout_constraintStart_toStartOf="parent"
    />
  <TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:text="세번째 사람"
    app:layout_constraintBaseline_toBaselineOf="@+id/third_station"
    app:layout_constraintStart_toStartOf="parent"
    />
  <TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:text="두번째 사람"
    app:layout_constraintBaseline_toBaselineOf="@+id/second_station"
    app:layout_constraintStart_toStartOf="parent"
    />
  <TextView
    android:id="@+id/resultText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="13dp"
    android:text=""
    app:layout_constraintBottom_toTopOf="@+id/button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>